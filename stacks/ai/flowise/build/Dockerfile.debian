# syntax=docker/dockerfile:1
ARG NODE_VERSION=20
FROM node:${NODE_VERSION}-slim

# Build arguments
ARG FLOWISE_VERSION=2.1.3

# Labels
LABEL org.opencontainers.image.title="Flowise"
LABEL org.opencontainers.image.description="Drag & drop UI to build customized LLM flows"
LABEL org.opencontainers.image.version="${FLOWISE_VERSION}"
LABEL org.opencontainers.image.vendor="Zylarian Innovations LLC"
LABEL org.opencontainers.image.source="https://github.com/zylarian/dockyard"
LABEL org.opencontainers.image.licenses="MIT"
LABEL maintainer="Zylarian Innovations LLC"

# Install system dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    git \
    python3 \
    python3-pip \
    make \
    g++ \
    build-essential \
    chromium \
    ca-certificates \
    fonts-liberation \
    libappindicator3-1 \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libcups2 \
    libdbus-1-3 \
    libgdk-pixbuf2.0-0 \
    libnspr4 \
    libnss3 \
    libx11-xcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    xdg-utils \
    curl && \
    rm -rf /var/lib/apt/lists/*

# Set Puppeteer to use installed Chromium
ENV PUPPETEER_SKIP_DOWNLOAD=true
ENV PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium

# Use existing node user (UID/GID 1000) and rename to flowise
RUN usermod -l flowise node && \
    groupmod -n flowise node && \
    usermod -d /home/flowise -m flowise

# Set working directory
WORKDIR /app

# Install Flowise globally
RUN npm install -g flowise@${FLOWISE_VERSION} && \
    npm cache clean --force

# Create data directory
RUN mkdir -p /app/data && \
    chown -R flowise:flowise /app

# Switch to flowise user
USER flowise

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3000
ENV FLOWISE_USERNAME=admin
ENV FLOWISE_PASSWORD=admin
ENV DATABASE_PATH=/app/data
ENV APIKEY_PATH=/app/data
ENV SECRETKEY_PATH=/app/data
ENV LOG_PATH=/app/data/logs
ENV BLOB_STORAGE_PATH=/app/data/storage

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:3000/api/v1/ping || exit 1

# Volume for persistent data
VOLUME ["/app/data"]

# Start Flowise
CMD ["flowise", "start"]
