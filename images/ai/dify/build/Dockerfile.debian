# Zylarian Dockyard - Dify API
# Based on official Dify image with Zylarian customizations

ARG DIFY_VERSION=0.10.1
FROM langgenius/dify-api:${DIFY_VERSION}

# Zylarian metadata
LABEL maintainer="Zylarian Innovations LLC <support@zylarian.com>"
LABEL org.opencontainers.image.source="https://github.com/zylarian/dockyard"
LABEL org.opencontainers.image.description="Dify ${DIFY_VERSION} - LLM App Development Platform (Zylarian Edition)"
LABEL org.opencontainers.image.vendor="Zylarian Innovations LLC"
LABEL org.opencontainers.image.version="${DIFY_VERSION}"

# Switch to root for any additional setup
USER root

# Add any Zylarian-specific customizations here
# (Currently none, but this is where you'd add them in the future)

# Switch back to the original user (if the base image had one)
# The official Dify image doesn't specify a user, so it runs as root by default
